{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@middleware/*": ["middleware/*"],
      "@model/*": ["model/*"],
      "@routes/*": ["routes/*"],
      "@types/*": ["types/*"],
      "@util/*": ["util/*"],
      "@helpers/*": ["helpers/*"]
    }
  },
  "include": ["src/**/*.ts", "src/db.ts"],
  "exclude": ["node_modules"]
}